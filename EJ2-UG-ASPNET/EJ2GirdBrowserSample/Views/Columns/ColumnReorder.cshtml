@{
    ViewData["Title"] = "Column Reorder";
}
<p>@ViewData["Title"]</p>

<ejs-grid id="Grid" dataSource="@ViewBag.DataSource" allowReordering="true" height="315">
    <e-grid-columns>
        <e-grid-column field="EmployeeID" headerText="Employee ID" width="100"></e-grid-column>
        <e-grid-column field="CustomerID" headerText="First Name" width="120"></e-grid-column>
        <e-grid-column field="Freight" headerText="Title" width="100"></e-grid-column>
        <e-grid-column field="OrderDate" headerText="Birth Date" width="100" format="yMd"></e-grid-column>
    </e-grid-columns>
</ejs-grid>